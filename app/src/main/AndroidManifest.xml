<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="org.ilim.offlinesurvey"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="1"
    android:versionName="1.0">
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:name="org.ilim.offlinesurvey.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:label="@string/app_name"
            android:name="org.ilim.offlinesurvey.MenuMainActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:label="@string/title_activity_sub_main"
            android:name="org.ilim.offlinesurvey.MenuSubActivity"
            android:parentActivityName="org.ilim.offlinesurvey.MenuMainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.ilim.offlinesurvey.MenuMainActivity"/>
        </activity>
        <activity
            android:label="@string/title_activity_survey"
            android:name="org.ilim.offlinesurvey.SurveyActivity"
            android:parentActivityName="org.ilim.offlinesurvey.MenuMainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.ilim.offlinesurvey.MenuMainActivity"/>
        </activity>
    </application>
</manifest>
